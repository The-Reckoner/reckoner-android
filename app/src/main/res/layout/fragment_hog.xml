<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.thereckoner.reckoner.HOGFragment"
    android:background="@color/colorIcons">


    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/hog_banner"
        android:id="@+id/hogBanner"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:elevation="3dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/hog"
        android:id="@+id/hogLogo"
        android:layout_marginTop="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hogGrid"
        android:layout_below="@+id/hogBanner"
        />



</RelativeLayout>
